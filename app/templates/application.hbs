{{outlet}}

{{#eui-modal open=showContact style="full"}}
  <div class="modalcontent">
    <h2>
      You may use the form below to quickly drop us a note about your project. We can also be reached by email at <a href="mailto:hello@venn.lc">hello@venn.lc</a> or via Twitter at <a href="https://twitter.com/teamvenn" target="_blank">@teamvenn</a>
    </h2>

    <form>
      <div class="formrow">
        {{eui-input value=name width="100%" placeholder="Name" error=nameError}}
      </div>
      <div class="formrow">
        {{eui-input value=email width="100%" placeholder="Email" error=emailError}}
      </div>
      <div class="formrow">
        {{eui-textarea value=message width="100%" height="250px" placeholder="Message" error=messageError}}
      </div>

      <div class="buttonpanel">
        {{eui-button action="sendEmail" label="Send Email" type="submit" disabled=isInvalid loading=isSending}}
        {{#unless isSending}} or <span {{action 'hideContact'}}>Cancel</span> {{/unless}}
      </div>
    </form>
  </div>
{{/eui-modal}}
