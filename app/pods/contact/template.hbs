{{site-navigation}}

<div class="contact-banner">
</div>

<div class="modalcontent">
<h2>
  <span class="nomobile">Use the form below to drop us a note about your project. We can also be reached by email at <a href="mailto:hello@venn.lc">hello@venn.lc</a> or via Twitter at <a href="https://twitter.com/teamvenn" target="_blank">@teamvenn</a>
  </span>
  <span class="mobile">We can be reached by email at <a href="mailto:hello@venn.lc">hello@venn.lc</a> or via Twitter at <a href="https://twitter.com/teamvenn" target="_blank">@teamvenn</a></span>
</h2>

<form class="nomobile">
  {{#if isSent}}
    <div class="email-sent">
      <p>
        Email sent! We will get back to you shortly.
      </p>
      {{eui-button action="hideContact" label="Close Window"}}
    </div>
  {{else}}
    <div class="formrow">
      {{#eui-input width="100%" error=nameError}}
        {{input value=name placeholder="Name"}}
      {{/eui-input}}
    </div>
    <div class="formrow">
      {{#eui-input width="100%" error=emailError}}
        {{input value=email placeholder="Email"}}
      {{/eui-input}}
    </div>
    <div class="formrow">
      {{#eui-textarea width="100%" height="250px" error=messageError}}
        {{textarea value=message placehodler="Message"}}
      {{/eui-textarea}}
    </div>

    <div class="buttonpanel">
      {{#eui-button action="sendEmail" type="submit" disabled=isInvalid loading=isSending}}
        Send Email
      {{/eui-button}}
    </div>
  {{/if}}
</form>

{{eui-button action="hideContact" label="Close" class="mobile"}}
</div>
